<Window x:Class="TOP_Messanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TOP_Messanger"
        mc:Ignorable="d"
        Title="TOP Messenger"
        Height="700" 
        Width="1100"
        MinHeight="400" 
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA" Icon="/messenger.png">
    <Window.Resources>
        <!-- Стили для кнопок -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ChatButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#8b00ff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6B3FA0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6B3FA0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для сообщений в чате -->
        <Style x:Key="MessageBubbleStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="5,3"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <!-- Стиль для панелей -->
        <Style x:Key="PanelStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Чаты -->
        <Border Grid.Column="0" 
                Background="White" 
                Margin="10,10,5,10"
                Style="{StaticResource PanelStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок чатов -->
                <Border Grid.Row="0" 
                        Background="White"
                        Padding="15,15,15,10"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1">
                    <TextBlock Text="Чаты" 
                              Foreground="#333333" 
                              FontSize="18" 
                              FontWeight="Bold"/>
                </Border>

                <!-- Список чатов -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Padding="5">
                    <StackPanel>
                        <Button Content="👥 Общая группа" 
                                Style="{StaticResource ChatButtonStyle}"
                                FontWeight="SemiBold"
                                Foreground="#8b00ff"/>

                        <Separator Margin="10,5" Background="#F0F0F0"/>

                        <Button Content="krs333" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="Pagan821" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="denden" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="cat_noir" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="lady_bug" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="tabeer" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="lushPush" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="Siles" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="USF055" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="vld666" Style="{StaticResource ChatButtonStyle}"/>
                        <Button Content="ananas" Style="{StaticResource ChatButtonStyle}"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Кнопка настроек -->
                <Border Grid.Row="2"
                        Background="#F9F9F9"
                        Padding="10"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,1,0,0">
                    <Button Content="⚙ Настройки" 
                            Style="{StaticResource MenuButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Click="SettingsButton_Click"/>
                </Border>
            </Grid>
        </Border>

        <!-- Чат -->
        <Border Grid.Column="1" 
                Background="White" 
                Margin="5,10"
                Style="{StaticResource PanelStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок чата -->
                <Border Grid.Row="0" 
                        Background="White"
                        Padding="15,15"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1">
                    <TextBlock Text="Общий чат" 
                              Foreground="#333333" 
                              FontSize="16" 
                              FontWeight="SemiBold"/>
                </Border>

                <!-- ListBox для сообщений -->
                <ListBox Name="listBoxChat" 
                         Grid.Row="1"
                         Background="White"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Padding="10"
                         SelectionChanged="ListBoxChat_SelectedItem">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource MessageBubbleStyle}"
                    Background="#E3F2FD"
                    HorizontalAlignment="Left"
                    MaxWidth="400">
                                <TextBlock Text="{Binding}" 
                           TextWrapping="Wrap" 
                           FontSize="14"
                           Foreground="#333333"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Панель ввода сообщения -->
                <Border Grid.Row="2" 
                        Background="#F9F9F9" 
                        Padding="15"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Кнопка отправки файла -->
                        <Button Grid.Column="0" 
                                Content="  📎  " 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,10,0"
                                Padding="15,0"
                                Click= "SendFileButton_Click"/>

                        <!-- Ввод сообщений -->
                        <TextBox Grid.Column="1" 
                                 Name="MessageTextBox"
                                 Padding="12"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="#E0E0E0"
                                 BorderThickness="1"
                                 Background="White"
                                 AcceptsReturn="False"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 MinHeight="40"
                                 MaxHeight="100"
                                 KeyDown="MessageTextBox_KeyDown"/>

                        <Button Grid.Column="2" 
                                Content="Отправить" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="10,0,0,0"
                                Padding="25,0" 
                                Click="Button_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Правая панель -->
        <Border Grid.Column="2" 
                Background="White" 
                Margin="5,10,10,10"
                Style="{StaticResource PanelStyle}">
            <DockPanel>
                <!-- Кнопка играть  -->
                <Button DockPanel.Dock="Top" 
                        Content="🎮 Играть" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="10"
                        Height="45"
                        Click="GameButton_Click"/>

                <!-- Область для файлов -->
                <Border Margin="10"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="5">
                    <DockPanel>
                        <!-- Заголовок файлов -->
                        <Border DockPanel.Dock="Top" 
                                Background="#F9F9F9"
                                Padding="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,1">
                            <TextBlock Text="📁 Файлы" 
                                      Foreground="#333333" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"/>
                        </Border>

                        <!-- Список файлов -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      Padding="5">
                            <StackPanel Name="FilesPanel">
                                <!-- Отображение файлов -->
                                <TextBlock Text="Файлы будут отображаться здесь" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="20"
                                           Foreground="#888888"
                                           FontStyle="Italic"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </ScrollViewer>
                    </DockPanel>
                </Border>
            </DockPanel>
        </Border>
    </Grid>
</Window>