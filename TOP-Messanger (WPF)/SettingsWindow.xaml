<Window x:Class="TOP_Messanger.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TOP_Messanger"
        mc:Ignorable="d"
        Title="Настройки" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA" Icon="/messenger.png">
    <Window.Resources>
        <!-- Стили из MainWindow -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#8b00ff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6B3FA0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6B3FA0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PanelStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ThemeRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- Стиль для текстового поля с логином -->
        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <Border Grid.Column="0" 
                Style="{StaticResource PanelStyle}"
                Width="200"
                Margin="0,0,10,0">
            <StackPanel Margin="5">
                <Button Content="👤 Профиль" 
                        Style="{StaticResource MenuButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Height="45"
                        FontSize="15"
                        Margin="5,10" 
                        Click="ProfileButton_Click"/>
                <Button Content="🎨 Внешний вид" 
                        Style="{StaticResource MenuButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Height="45"
                        FontSize="15"
                        Margin="5,5"
                        Click="ThemeButton_Click"/>
                <Button Content="📊 Рейтинг" 
                        Style="{StaticResource MenuButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Height="45"
                        FontSize="15"
                        Margin="5,5"
                        Click="RatingButton_Click"/>

                <!-- Кнопка возврата -->
                <Button Content="← Назад" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Height="40"
                        Margin="5,20,5,10"
                        FontSize="14"
                        Click="BackButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Основная область настроек -->
        <Border Grid.Column="1" 
                Style="{StaticResource PanelStyle}">
            <ScrollViewer Name="scroller"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <!-- Профиль пользователя -->
                    <Border BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1"
                            Padding="0,0,0,20"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="👤 Профиль пользователя" 
                                      Style="{StaticResource SectionHeaderStyle}"/>

                            <!-- Логин -->
                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Логин:" 
                                          Style="{StaticResource InfoLabelStyle}"/>
                                <TextBox x:Name="userName_TextBox"
                                       Grid.Column="1" 
                                       Style="{StaticResource LoginTextBoxStyle}"/>
                            </Grid>

                            <!-- IP адрес -->
                            <Grid Grid.Row="2" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="IP адрес:" 
                                          Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock Grid.Column="1" 
                                          Text="127.0.0.1" 
                                          Style="{StaticResource InfoValueStyle}"/>
                            </Grid>

                            <!-- Онлайн статус -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Статус:" 
                                          Style="{StaticResource InfoLabelStyle}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Ellipse Width="10" 
                                             Height="10" 
                                             Fill="#4CAF50" 
                                             Margin="0,0,5,0"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="В сети" 
                                              Style="{StaticResource InfoValueStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Выбор темы -->
                    <Border BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1"
                            Padding="0,0,0,20"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="🎨 Тема приложения" 
                                      Style="{StaticResource SectionHeaderStyle}"/>

                            <RadioButton x:Name="LightThemeRadio" 
                                        Content="Светлая тема" 
                                        Style="{StaticResource ThemeRadioButtonStyle}"
                                        IsChecked="True"
                                        GroupName="ThemeGroup"/>

                            <RadioButton x:Name="DarkThemeRadio" 
                                        Content="Тёмная тема" 
                                        Style="{StaticResource ThemeRadioButtonStyle}"
                                        GroupName="ThemeGroup"/>

                            <RadioButton x:Name="BlueNightThemeRadio" 
                                        Content="Синяя ночь" 
                                        Style="{StaticResource ThemeRadioButtonStyle}"
                                        GroupName="ThemeGroup"/>

                            <RadioButton x:Name="LavenderThemeRadio" 
                                        Content="Лавандовое поле" 
                                        Style="{StaticResource ThemeRadioButtonStyle}"
                                        GroupName="ThemeGroup"/>

                            <!-- Кнопка применения темы -->
                            <Button Content="Применить тему" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,20,0,0"
                                    Width="150"
                                    HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>

                    <!-- Рейтинг пользователя -->
                    <StackPanel>
                        <TextBlock Text="📊 Рейтинг пользователя" 
                                  Style="{StaticResource SectionHeaderStyle}"/>

                        <TextBlock Text="Рейтинг рассчитывается на основе времени, проведённого в приложении"
                                  FontSize="14"
                                  Foreground="#666666"
                                  Margin="0,0,0,15"
                                  TextWrapping="Wrap"/>
                        
                        <!-- Карточка рейтинга -->
                        <Border Background="#F8F9FA"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Ваше место в рейтинге"
                                              FontSize="15"
                                              Foreground="#666666"
                                              Margin="0,0,0,5"/>
                                    <TextBlock Text="1"
                                              FontSize="36"
                                              FontWeight="Bold"
                                              Foreground="#8b00ff"/>
                                    <TextBlock Text="из 10 пользователей"
                                              FontSize="14"
                                              Foreground="#666666"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Общее время онлайн:"
                                              FontSize="14"
                                              Foreground="#666666"
                                              TextAlignment="Right"/>
                                    <TextBlock Text="0 час 0 минут"
                                              FontSize="18"
                                              FontWeight="SemiBold"
                                              Foreground="#333333"
                                              TextAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Администрирование -->
                        <Border Name="AdminSection"
                                BorderBrush="#E0E0E0"
                                BorderThickness="0,0,0,1"
                                Padding="0,0,0,20"
                                Margin="0,0,0,20"
                                Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="🛡 Администрирование" 
                                           Style="{StaticResource SectionHeaderStyle}"/>

                                <TextBlock Text="Управление пользователями системы"
                                           FontSize="14"
                                           Foreground="#666666"
                                           Margin="0,0,0,15"
                                           TextWrapping="Wrap"/>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button Name="AddUserButton"
                                            Content="➕ Добавить пользователя"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,10,0"
                                            Padding="15,0"
                                            Click="AddUserButton_Click"/>

                                    <Button Name="RemoveUserButton"
                                            Content="➖ Удалить пользователя"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0,0,10,0"
                                            Padding="15,0"
                                            Click="RemoveUserButton_Click"/>
                                </StackPanel>

                                <Button Name="EditUserButton"
                                        Content="✏️ Изменить данные пользователя"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="0,0,0,10"
                                        Padding="15,0"
                                        HorizontalAlignment="Left"
                                        Click="EditUserButton_Click"/>

                                <!-- Список пользователей -->
                                <Border Background="#F8F9FA"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="15"
                                        Margin="0,10,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Текущие пользователи:"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#333333"
                                                   Margin="0,0,0,10"/>

                                        <ScrollViewer MaxHeight="200"
                                                      VerticalScrollBarVisibility="Auto">
                                            <StackPanel Name="UsersListPanel">
                                                <TextBlock Text="Загрузка списка пользователей..."
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           Margin="10"
                                                           Foreground="#888888"
                                                           FontStyle="Italic"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>