<Window x:Class="TOP_Messanger.AdminUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление пользователем" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Icon="/messenger.png">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Name="TitleText"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Логин -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Логин:"
                      VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     Name="LoginTextBox"
                     Padding="5"/>
        </Grid>

        <!-- Пароль (для добавления/редактирования) -->
        <Grid Grid.Row="2" 
              Name="PasswordGrid"
              Margin="0,0,0,10"
              Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Пароль:"
                      VerticalAlignment="Center"/>
            <PasswordBox Grid.Column="1"
                        Name="PasswordBox"
                        Padding="5"/>
        </Grid>

        <!-- Роль (для добавления/редактирования) -->
        <Grid Grid.Row="3" 
              Name="RoleGrid"
              Margin="0,0,0,10"
              Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Роль:"
                      VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1"
                     Name="RoleComboBox"
                     SelectedIndex="0">
                <ComboBoxItem Content="user"/>
                <ComboBoxItem Content="admin"/>
            </ComboBox>
        </Grid>

        <!-- Предупреждение для удаления -->
        <TextBlock Grid.Row="4" 
                   Name="WarningText"
                   TextWrapping="Wrap"
                   Foreground="Red"
                   Visibility="Collapsed"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Отмена"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Name="ActionButton"
                    Content="Выполнить"
                    Width="80"
                    Background="#8b00ff"
                    Foreground="White"
                    Click="ActionButton_Click"/>
        </StackPanel>
    </Grid>
</Window>